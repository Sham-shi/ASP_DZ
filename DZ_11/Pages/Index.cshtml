@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center container">
    <form method="post" asp-antiforgery="true" class="card card-body m-3 bg-secondary text-light">
        <div class="d-flex align-items-center justify-content-center gap-2 py-3">
            <label class="form-label mb-0" asp-for="WorkoutSignUp.FIO"></label>
            <input class="form-control flex-shrink-1 w-auto bg-secondary-subtle" type="text" asp-for="WorkoutSignUp.FIO" /><br />
            <span asp-validation-for="WorkoutSignUp.FIO" class="text-danger small"></span>
        </div>

        <div class="d-flex align-items-center justify-content-center gap-2 py-3">
            <label class="form-label mb-0" asp-for="WorkoutSignUp.Age"></label>
            <input class="form-control flex-shrink-1 w-auto bg-secondary-subtle" type="number" asp-for="WorkoutSignUp.Age" />
            <span asp-validation-for="WorkoutSignUp.Age" class="text-danger small"></span>
        </div>

        <div class="input-group justify-content-center gap-2 m-auto">
            <label class="form-label mb-0" asp-for="WorkoutSignUp.Gender"></label><br />
            <input class="form-check" type="radio" asp-for="WorkoutSignUp.Gender" value="1" id="gender-male" />
            <label class="form-label mb-0" for="gender-male">Мужской</label>
            <input class="form-check" type="radio" asp-for="WorkoutSignUp.Gender" value="2" id="gender-female" />
            <label class="form-label mb-0" for="gender-female">Женский</label>
            <span asp-validation-for="WorkoutSignUp.Gender" class="text-danger small"></span>
        </div>

        <div class="d-flex align-items-center justify-content-center gap-2 py-3">
            <label class="form-label mb-0" asp-for="WorkoutSignUp.Height"></label>
            <input class="form-control flex-shrink-1 w-auto bg-secondary-subtle" type="number" max="3.0" step="0.01" asp-for="WorkoutSignUp.Height" />
            <span asp-validation-for="WorkoutSignUp.Height" class="text-danger small"></span>
        </div>

        <div class="d-flex align-items-center justify-content-center gap-2 py-3">
            <label class="form-label mb-0" asp-for="WorkoutSignUp.Weight"></label>
            <input class="form-control flex-shrink-1 w-auto bg-secondary-subtle" type="number" asp-for="WorkoutSignUp.Weight" />
            <span asp-validation-for="WorkoutSignUp.Weight" class="text-danger small"></span>
        </div>

        <div class="d-flex align-items-center justify-content-center gap-2 py-3">
            <label class="form-label mb-0" asp-for="WorkoutSignUp.BMI"></label>
            <input class="form-control flex-shrink-1 w-auto bg-secondary-subtle" type="number" asp-for="WorkoutSignUp.BMI" disabled />
        </div>

        <div class="d-flex align-items-center justify-content-center gap-2 py-3">
            <label class="form-label mb-0" asp-for="WorkoutSignUp.TrainingLevel"></label>
            <select class="form-control bg-secondary-subtle" asp-for="WorkoutSignUp.TrainingLevel" asp-items="Html.GetEnumSelectList<TrainingLevelType>()">
                <option value="">-- Выберите уровень --</option>
            </select>
            <span asp-validation-for="WorkoutSignUp.TrainingLevel" class="text-danger small"></span>
        </div>

        <button type="submit" class="btn btn-primary">Зарегистрироваться</button>
    </form>
</div>
